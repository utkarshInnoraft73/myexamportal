{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<div class="container">
		<div class="innerContent">
			<h1>Create your profile</h1>
			<hr>

			{{ form_errors(form) }}

			{{ form_start(form) }}
			{{ form_row(form.name) }}
			{{ form_row(form.schooling_percent) }}

			{{ form_row(form.graduation_percent) }}

			{{ form_row(form.resume_link) }}
			{# {{ form_row(form.user_id) }} #}
			<button type="submit" class="btn btn-primary">Save changes</button>
<p class = "mt-3"><a href = "{{path('app_profile', {'id':app.user.id})}}">See your Profile</button>
</p>
			{{ form_end(form) }}

		</div>
	</div>
{% endblock %}

