{% extends "base.html.twig" %}

{% block body %}
	{% if app.user %}
		<div class="d-flex flex-column flex-shrink-0 p-3 bg-light bg-yellow" style="width: 280px;">
			<h3>Welcome,
				<span style="font-size: 15px; font-weight:200;">{{ app.user.userIdentifier }}</span>
			</h3>
			<a href="{{ path('app_logout') }}">Logout</a>
			<hr>
			<ul class="nav nav-pills flex-column mb-auto">
				<li>
					<a href="{{path('app_dashboard')}}" class="nav-link 	 link-dark">
						Dashboard
					</a>
				</li>
				<li>
					<a href="{{path('app_appliedExams', {'id': app.user.id})}}" class="nav-link link-dark">
						Applied Exams
					</a>
				</li>
				<li>
					<a href="{{path('app_exams')}}" class="nav-link link-dark">
						Upcoming exams
					</a>
				</li>
				<li>
					<a href="{{ path('app_profile', { 'id': app.user.id }) }}" class="nav-link link-dark">
						Profile
					</a>
				</li>
			</ul>
		</div>
	{% endif %}
	<div class="container" style="width:1000px; position:absolute; right:50px; top:50px;">
		<div class="card text-center">
			<div class="card-header fs-5">
				Your performance.
			</div>
			<div class="card-body">
				<p class="card-title text-start fw-light text-success">Correct answers:
					{{jsonData.correctans}}</p>
				<p class="card-title text-start fw-light text-danger">Incorrect answers:
					{{jsonData.incorrectans}}</p>
				<p class="card-title text-start fw-light">Gotten marks:
					{{jsonData.gotenmarks}}</p>
			</div>
		</div>
	</div>
{% endblock %}
