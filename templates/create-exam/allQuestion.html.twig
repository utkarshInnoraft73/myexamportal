{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!
{% endblock %}

{% block body %}
{% if app.user %}
	<div class="d-flex flex-column flex-shrink-0 p-3 bg-light bg-yellow" style="width: 280px;">
		<h3>Welcome,
			<span style="font-size: 15px; font-weight:200;" class="badge bg-success">Admin:
				{{ app.user.userIdentifier }}</span>

		</h3>
		<a href="{{ path('app_logout') }}">Logout</a>

		<hr>
		<ul class="nav nav-pills flex-column mb-auto">

			<li>
				<a href="{{path('app_admin')}}" class="nav-link link-dark">
					Dashboard
				</a>
			</li>
			<li>
				<a href="{{path('create_exam')}}" class="nav-link link-dark">

					Create exam

				</a>
			</li>
			<li>
				<a href="{{path('your_exams',{ 'id': app.user.id })}}" class="nav-link link-dark">
					Created Exam
				</a>
			</li>
			{# <li>
								<a href="{{ path('app_profile', { 'id': app.user.id }) }}" class="nav-link link-dark">
									Result
								</a>
							</li> #}
		</ul>
	</div>

		{# Dashboard body starts here. #}
<div class="container" style="width:1000px; position:absolute; right:50px; top:50px;">

		{% for i in 0..(jsonData.title|length - 1) %}
			<div class="card my-2" style="width: 50rem;">
				<div class="card-header">
					<h4 style = "font-size:30px;">Question {{loop.index}}. {{jsonData.title[i]}}</h4>
					<p style = "font-size:20px;">Pointed marks: <span class = 'fw-light text-muted'>{{jsonData.marks[i]}}</span></p>
<p style="font-size:20px;">Correct answer:
	<span class="fw-light text-muted">{{jsonData.correct[i]}}</span></p>
</p>


				</div>
				<ol class="list-group list-group-flush">
<li class="list-group-item">Option A:
	<span class="text-muted">{{jsonData.A[i]}}</span></li>
</li>

<li class="list-group-item">Option B: <span class = "text-muted">{{jsonData.B[i]}}</span></li>

<li class="list-group-item">Option C:
	<span class="text-muted">{{jsonData.C[i]}}</span></li>
</li>


<li class="list-group-item">Option D:
	<span class="text-muted">{{jsonData.D[i]}}</span></li>
</li>


				</ol>
			</div>
		{% endfor %}
</div>
	{% endif %}
	{# Dashboard body ends here. #}


{% endblock %}
